{
  "manifest_version": 3,
  "name": "YouTube Aggressive Manager",
  "version": "5.0",
  "description": "Auto-group, background open, persistent speed 1.5x, auto-close.",
  "permissions": [
    "tabs",
    "tabGroups",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}