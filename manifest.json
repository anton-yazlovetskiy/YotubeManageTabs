{
  "manifest_version": 3,
  "name": "YT Manager 1.0",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "tabGroups"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}